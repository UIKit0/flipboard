<?xml version="1.0" encoding="UTF-8"?>
<flipboard>
	<hosts>
		<description>和讯</description>
		<url>http://www.hexun.com</url>
		<charset>gb2312</charset>
		<getsMethod>html</getsMethod>
		<timeout>10000</timeout>
		<dbFile>/xxtebook.db</dbFile>
		<newsArea>
		     <contentArea>
		          
		         <item>
				     <contentSelector>div#tab01_con1</contentSelector>
				      <mustHaveChild></mustHaveChild>
					 <title>财经要闻</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>1</type>
				 </item>
				
				 <item>
				     <contentSelector>div#tab01_con2</contentSelector>
				     <mustHaveChild></mustHaveChild>
					 <title>时事要闻</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>2</type>
				 </item>
				 
				 <item>
				     <contentSelector>div.b_rm02</contentSelector>
				     <mustHaveChild>div.sy_dot8x8</mustHaveChild>
					 <title>热点新闻</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>3</type>
				 </item>
				
				  <item>
				     <contentSelector>div#add_gupiaojj</contentSelector>
				     <mustHaveChild></mustHaveChild>
					 <title>股票基金</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>4</type>
				 </item>
				 
				 <item>
				     <contentSelector>div.b_rm03</contentSelector>
				      <mustHaveChild>ul.sy_ul14c</mustHaveChild>
					 <title>国际市场</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>5</type>
				 </item>
				 
				  <item>
				     <contentSelector>div#add_pinglun</contentSelector>
				     <mustHaveChild></mustHaveChild>
					 <title>评论</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>6</type>
				 </item>
				 <item>
				     <contentSelector>div.b_rm03</contentSelector>
				     <mustHaveChild>ul.gb_ul14b</mustHaveChild>
					 <title>博客</title>
					 <pageCharset>gb2312</pageCharset>
					 <type>7</type>
				 </item>
			 </contentArea>
			<newsList>
			    <listTagPattern>a</listTagPattern>
				<newsUrlPattern>href</newsUrlPattern>
				<excludePattern><![CDATA[ ^\\[(.+?)\\] ]]></excludePattern>
				<urlLinkReg><![CDATA[[a-zA-z]+://[^\s]*.htm.?]]></urlLinkReg>
				<newsTitlePattern></newsTitlePattern>
			</newsList>
			<newsPageProcess>
				<item>
					<newsContentTag>div#artibody</newsContentTag>
					<abstractPattern>p+p+p</abstractPattern>
					<pageCharset>gbk</pageCharset>
					<elementReplace>
						<item>
							<orgPattern>table:has(form#theForm14322)</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>style</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>script</orgPattern>
							<newContent></newContent>
						</item>				
					</elementReplace>
					<contentReplace> 
						<item>
							<orgPattern><![CDATA[ <script(?:[^<]++|<(?!/script>))*+</script> ]]></orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern><![CDATA[ <select(?:[^<]++|<(?!/select>))*+</select> ]]></orgPattern>
							<newContent></newContent>
						</item>
					</contentReplace>
					<relatedItems>
					    <item>
						    <relatedPattern>p:contains(分析评论)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(行业动态)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(相关专题)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(延伸阅读)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(各国排水系统)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(反思和教训)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(相关新闻)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>h4:contains(相关新闻)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(相关评论)</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						 <item>
						    <relatedPattern>p:contains(推荐阅读)</relatedPattern>
						    <relatedItemsType>1</relatedItemsType>
						    <ignoreTags>h1</ignoreTags>
						</item>
					</relatedItems>
					<pages>
						<selectPattern><![CDATA[ select > option ]]></selectPattern>
						<urlValue>value</urlValue>
					</pages>
				</item>
				<item><!-- 博客 -->
					<newsContentTag>div#ArticeTextID</newsContentTag>
					<abstractPattern>p+p+p</abstractPattern>
					<pageCharset>gbk</pageCharset>
					<elementReplace>
						<item>
							<orgPattern>table:has(form#theForm14322)</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>style</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>script</orgPattern>
							<newContent></newContent>
						</item>								
					</elementReplace>
					<contentReplace> 
						<item>
							<orgPattern><![CDATA[ <script(?:[^<]++|<(?!/script>))*+</script> ]]></orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern><![CDATA[ <select(?:[^<]++|<(?!/select>))*+</select> ]]></orgPattern>
							<newContent></newContent>
						</item>
					</contentReplace>
					<relatedItems>
						<!-- 
						<item>
						    <relatedPattern>p:contains(推荐阅读)</relatedPattern>
						    <relatedItemsType>1</relatedItemsType>
						    <ignoreTags>h1</ignoreTags>
						</item>
						-->
					</relatedItems>
					<pages>
						<selectPattern><![CDATA[ select > option ]]></selectPattern>
						<urlValue>value</urlValue>
					</pages>
				</item>
			</newsPageProcess>
			<picturePageProcess>
			    <hexun>
					<picContentTag>div#bigPicArea</picContentTag>
					<picAbstractPattern>div.slide_subtitle</picAbstractPattern>
					<picSlide>div#slide_pic</picSlide>
					<picCountMax>font.pic_count_max</picCountMax>
					<picCount>font.pic_count</picCount>
					<picCountIndex>1</picCountIndex>
					<firstPicCountLetter>/</firstPicCountLetter>
					<secondPicCountLetter>)</secondPicCountLetter>
					<nextPicturePattern>a.pic_next</nextPicturePattern>
					<nextPictureAttr>href</nextPictureAttr>
				</hexun>
			</picturePageProcess>
			<pages>
			    <hexun>
					<selectPattern><![CDATA[ select > option ]]></selectPattern>
					<urlValue>value</urlValue>
				</hexun>
			</pages>
			
		</newsArea>
	</hosts>
</flipboard>

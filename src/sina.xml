<?xml version="1.0" encoding="UTF-8"?>
<flipboard>
    <hosts>
		<description>新浪</description>
		<url>http://www.sina.com.cn</url>
		<charset>gbk</charset>
		<getsMethod>html</getsMethod>
		<timeout>10000</timeout>
		<dbFile>/sina.db</dbFile>
		<newsArea>
		     <contentArea>
		         <item>
				     <contentSelector>span#news_con_1</contentSelector>
				     <mustHaveChild></mustHaveChild> 
					 <title>新浪|财经</title>
					 <type>1</type>
				 </item>
			 </contentArea>
			<newsList>
			    <listTagPattern>a</listTagPattern>
				<newsUrlPattern>href</newsUrlPattern>
				<excludePattern></excludePattern>
				<urlLinkReg><![CDATA[[a-zA-z]+://[^\s]*.shtm.?]]></urlLinkReg>
				<newsTitlePattern></newsTitlePattern>
			</newsList>
			<newsPageProcess>
				<item>
					<newsContentTag>div#artibody</newsContentTag>
					<abstractPattern>p+p+p</abstractPattern>
					<elementReplace>
						<item>
							<orgPattern>div#sinashareto</orgPattern>
							<newContent></newContent>
						</item>
						<!-- <item>
							<orgPattern>a#guessulike2Change</orgPattern>
							<newContent></newContent>
						</item> -->
						<item>
							<orgPattern>div.guessulike2</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>div.blkComment.otherContent_01</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>style</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>script</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>iframe</orgPattern>
							<newContent></newContent>
						</item>
					</elementReplace>
					<contentReplace>
						<item>
							<orgPattern><![CDATA[ <script(?:[^<]++|<(?!/script>))*+</script> ]]></orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern><![CDATA[ <style(?:[^<]++|<(?!/style>))*+</style> ]]></orgPattern>
							<newContent></newContent>
						</item>
					</contentReplace>
					<relatedItems>
						 <item>
						    <relatedPattern>div#blk_n001_050</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						<item>
						    <relatedPattern>div#blk_n001_051</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						<item>
							<relatedPattern>div.otherContent_01</relatedPattern>
						    <relatedItemsType>1</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						<item>
							<relatedPattern>div#blk_otherContent_2</relatedPattern>
						    <relatedItemsType>1</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						<!-- <item>
							<relatedPattern>div.guessulike2</relatedPattern>
						    <relatedItemsType>1</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item> -->
												
					</relatedItems>
					<pages>
						<selectPattern></selectPattern>
						<urlValue></urlValue>
					</pages>
				</item>
			</newsPageProcess>
			
			<picturePageProcess>
				<sina>
					<htmlContent>div#d_picIntro</htmlContent><!-- 获取图片网页摘要 -->
					<picContentTag>div#eData</picContentTag><!-- 图片内容开始 -->
					<picElements>dl</picElements><!-- 图片元素集合 -->
					<picDesc>dt</picDesc><!-- 图片文本描述 -->
					<picSpec>dd</picSpec><!-- 具体图片元素 -->
					<picIndex>0</picIndex><!-- 图片元素索引 -->
				</sina>
				
			</picturePageProcess>
		</newsArea>
	</hosts>
</flipboard>
						<item>
						    <orgPattern>div.artical-player-wrap</orgPattern>
						    <newContent></newContent>
						</item>
						<item>
						    <orgPattern>div.blk-video</orgPattern>
						    <newContent></newContent>
						</item>
						<item>
						    <orgPattern>span.blk_video_news</orgPattern>
						    <newContent></newContent>
						</item>
						<item>
							<orgPattern>div.myCommPages.SG_j_linedot1</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>div.writeComm</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>style</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>script</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>iframe</orgPattern>
							<newContent></newContent>
						</item>
					</elementReplace>
					<contentReplace>

							<orgPattern><![CDATA[ <script(?:[^<]++|<(?!/script>))*+</script> ]]></orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern><![CDATA[ <style(?:[^<]++|<(?!/style>))*+</style> ]]></orgPattern>
							<newContent></newContent>
						</item>
					</contentReplace>
					<relatedItems>
						 <item>
						    <relatedPattern>div#blk_n001_050</relatedPattern>
						    <relatedItemsType>0</relatedItemsType>
						    <ignoreTags></ignoreTags>
						</item>
						<item>
						    <relatedPattern>div#blk_n001_051</relatedPattern>

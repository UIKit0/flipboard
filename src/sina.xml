						<item>
							<orgPattern>div.content_about_video.clearfix</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>div.content_label_list</orgPattern>
							<newContent></newContent>
						</item>
						<item>
							<orgPattern>div.content_shareto.clearfix</orgPattern>

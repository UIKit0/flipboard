			<picturePageProcess>
				<sina>
					<picContentTag>div#eData</picContentTag><!-- 图片内容开始 -->
					<picElements>dl</picElements><!-- 图片元素集合 -->
					<picDesc>dt</picDesc><!-- 图片文本描述 -->
					<picSpec>dd</picSpec><!-- 具体图片元素 -->
					<picIndex>0</picIndex><!-- 图片元素索引 -->
					<htmlContentIndex>4</htmlContentIndex><!-- 获取图片网页摘要 -->
				</sina>
				
			</picturePageProcess>

<?xml version="1.0" encoding="UTF-8"?>
<flipboard>
    <hosts>
		<description>新浪</description>
		<url>http://www.sina.com.cn</url>
		<charset>gbk</charset>
		<getsMethod>html</getsMethod>
		<timeout>10000</timeout>
		<dbFile>/xxtebook.db</dbFile>
		<newsArea>
		     <contentArea>
		         <item>
				     <contentSelector>span#news_con_1</contentSelector>
				     <mustHaveChild></mustHaveChild> 
					 <title>新浪|财经</title>
					 <type>1</type>
				 </item>
				 <item>
				     <contentSelector>div#ent_con_1</contentSelector>
				     <mustHaveChild></mustHaveChild> 
					 <title>娱乐</title>
					 <type>2</type>
				 </item>
				 <item>
				 	<contentSelector>div#blk_sports_1</contentSelector>
				 	<mustHaveChild></mustHaveChild>
				 	<title>体育</title>
				 	<type>3</type>
				 </item>
				 <item>
				 	<contentSelector>div#blk_sports_2</contentSelector>
				 	<mustHaveChild></mustHaveChild>
				 	<title>NBA</title>
				 	<type>4</type>
				 </item>
				 <item>
				 	<contentSelector>div#blog</contentSelector>
				 	<mustHaveChild></mustHaveChild>
				 	<title>博客</title>
				 	<type>5</type>
				 </item>
			 </contentArea>
			<newsList>
			    <listTagPattern>a</listTagPattern>
				<newsUrlPattern>href</newsUrlPattern>
				<excludePattern></excludePattern>
				<urlLinkReg><![CDATA[[a-zA-z]+://[^\s]*.html[^\s]*]]></urlLinkReg>
